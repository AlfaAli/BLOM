COMPILER_TARGET ?= intel
include $(COMPILER_TARGET).make

ifeq (,$(wildcard $(COMPILER_TARGET).make))
    $(error "${COMPILER_TARGET}" compiler not supported!)
endif
$(info Using compiler "${COMPILER_TARGET}")

# Target name
TARGET=blom

# List of directories and files to be searched for targets and dependencies
TDLIST=../drivers/nocoupler ../phy ../trc ../idlage ../cesm ../ben02

all: $(TARGET)
depend:
	./mkmf -c $(DIRECTIVE_FLAGS) -f -p $(TARGET) -t Makefile.config $(TDLIST)
